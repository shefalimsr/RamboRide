<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shefali.ramboride.Main5Activity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/radioGroup"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    android:layout_marginTop="17dp"
    app:layout_constraintTop_toBottomOf="@+id/textView7"
    tools:layout_constraintLeft_creator="1">

    <RadioButton
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Same gender"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="332dp" />

    <RadioButton
        android:id="@+id/batch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Same Batch"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="367dp" />

    <RadioButton
        android:id="@+id/both"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Same gender and batch"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="399dp" />

    <RadioButton
        android:id="@+id/anyone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anyone"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="429dp" />

</RadioGroup>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Date (dd/mm/yyyy)"
        android:inputType="date"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="33dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView9"
        app:met_floatingLabel="normal"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferences"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/create"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp"
        android:layout_marginTop="51dp"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintVertical_bias="1.0"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#009999"
        fancy:fb_focusColor="#004c99"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="Create"
        fancy:fb_textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="302dp"
        android:layout_height="54dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="16dp"
        android:text="Create your party"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="45dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:text="Start Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginStart="52dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/clock"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextClock
        android:id="@+id/clock"
        android:layout_width="102dp"
        android:layout_height="34dp"
        android:hint="10:00 AM"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="113dp"
        app:layout_constraintBottom_toBottomOf="@+id/size"
        android:layout_marginEnd="111dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="72dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="64dp"
        app:layout_constraintLeft_toLeftOf="@+id/date"
        app:layout_constraintTop_toTopOf="@+id/date" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Party Size"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        android:layout_marginEnd="3dp"
        app:layout_constraintRight_toRightOf="@+id/clock"
        android:layout_marginBottom="27dp"
        app:met_floatingLabel="normal"
        />

</android.support.constraint.ConstraintLayout>
